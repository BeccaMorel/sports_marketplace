<div class="container">
    <div class="title">
      <h1><%= @equipment.name %></h1>
    </div>

    <div class="row">

      <div class="col-12 col-md-6">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% @equipment.photos.each do |photo| %>
              <% if photo == @equipment.photos.first %>
                <div class="carousel-item active">
              <% else %>
                <div class="carousel-item">
              <% end %>
              <%= cl_image_tag photo.key, height: 300, crop: :fill, class: "d-block w-400" %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <div class="description mx-3 my-5">
          <p><strong>Description:</strong> <%= @equipment.description %></p>
          <p><strong>Price:</strong> <%= @equipment.price %>CAD</p>
          <p><strong>Owner:</strong> <%= User.find(@equipment.user_id).first_name %></p>
          
          <% if policy(@equipment).edit? %>
            <p><%= link_to "Edit", edit_equipment_path(@equipment) %></p>
          <% end %>

          <% if policy(@equipment).destroy? %>
            <p><%= link_to "Delete",
              equipment_path(@equipment),
              method: :delete,
              data: { confirm: "Are you sure you want to delete #{@equipment.name}?" } %></p>
          <% end %>
        </div>
      </div>

      <div class="booking border p-3 my-3 col-12 col-md-6">
        <%= simple_form_for [@equipment, Booking.new] do |f| %>
          <%= f.input :date, as: :date %>
          <%= f.input :days %>
          <p>Total price: <span id="total-price"><strong><%= @equipment.price %></strong></span>CAD</p>
          <%= f.submit "Book now!", class: "btn border" %>
        <% end %>
      </div>
    </div>


    <div class="description mx-3 my-5">
      <h2>Reviews</h2>
      <% @reviews = @equipment.reviews %>
      <% if @reviews.empty? %>
        <%= "-- None --"%>
      <% else %>
        <% counter = 1 %>

        <% @reviews.each do |review|%>
          <ul>
            <li><strong>NÂ°<%= counter%>:</strong> <%= review.title %></p>
            <p>
              <strong>Rating: </strong>
              <% (review.rating).times do |r| %>
                <i class="fas fa-star text-primary"></i>
              <% end %>
            </p>
            <p><strong>Content:</strong> <%= review.description %></p></li>
          </ul>
          <% counter += 1 %>
        <% end %>
      <% end %>
    </div>
    
  <%= link_to "Return to all equipment", equipments_path %>
  </div>
</div>
