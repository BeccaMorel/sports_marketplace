<div class="container">
  <h1 class="text-center mt-5"><strong>Add Your Equipment</strong></h1>

  <div class="row align-items-center justify-content-center card-new">
    <div class="col-6 border card-new">
      <%= simple_form_for(@equipment) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photos, as: :file, input_html: { multiple: true, class: "photo-upload" } %>
        <%= f.input :price %>
        <%= f.button :submit, class: "w-100" %>
      <% end %>
    </div>
  </div>
</div>
